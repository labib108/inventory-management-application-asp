@model inventory_management.Models.Customer


<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/images/inventory/car4.jpg" class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="form-group form-outline mb-4">
                        <input asp-for="Email" class="form-control form-control-lg" />
                        <label asp-for="Email" class="form-label">Email address</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group form-outline mb-4">
                        <input asp-for="Password" class="form-control form-control-lg" type="password" />
                        <label asp-for="Password" class="form-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-around align-items-center mb-4">

                        <a href="#!">Forgot password?</a>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
                </form>
            </div>
        </div>
    </div>
</section>