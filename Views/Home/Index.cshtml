@using Microsoft.AspNetCore.Mvc;

@{
    var carouselId = "carouselExampleCaptions";
}

<div id="@carouselId" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @for (int i = 0; i < 4; i++)
        {
            <button type="button" data-bs-target="#@carouselId" data-bs-slide-to="@i" @(i == 0 ? "class=active" : "") aria-label="Slide @(i + 1)"></button>
        }
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="@Url.Content("~/Images/slider/car.jpg")" class="d-block w-100 carosal-img" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h1>Welcome to our Car Inventory</h1>
                <p>Tracking and managing the stock of cars in inventory...</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/Images/slider/electronics.jpg")" class="d-block w-100 carosal-img" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h1>Welcome to our Electronics Inventory</h1>
                <p>An inventory management system for electronics equipment and components...</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/Images/slider/food.jpg")" class="d-block w-100 carosal-img" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h1>Welcome to our Food Inventory</h1>
                <p>Maintaining an up-to-date food inventory is crucial for effective restaurant management...</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/Images/slider/fashion.jpg")" class="d-block w-100 carosal-img" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h1>Welcome to our Fashion and clothing Inventory</h1>
                <p>An inventory management system for Fashion design and clothing...</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

